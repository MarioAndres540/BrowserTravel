@model IEnumerable<BrowserTravel.Entidades.Autor>

@{
    ViewData["Title"] = "Index";
}

<h1>Autors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Autors" asp-action="Index">
    <p>
        Search: <input type="text" name="buscar" class="form-text" placeholder="Name" />
        <input type="submit" value="Search" class="btn btn-sm btn-dark" placeholder="Nombre" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th @Html.DisplayNameFor(model => model.Nombre)>
                Name
            </th>
            <th @Html.DisplayNameFor(model => model.Apellido)>
                Last Name
            </th>
            <th @Html.DisplayNameFor(model => model.FechaCreacion)>
                Creation date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
