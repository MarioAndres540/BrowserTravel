@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Browser Travel</h1>
    <br />
    <h4>In this application you can search your books, authors among others</h4>
    
</div>

<div class="row row-cols-1 row-cols-md-3 g-5 mt-4 ">
    <div class="mb-5">
        <form asp-controller="Autors" asp-action="Index">
            <h4>Search by author</h4>
            <p>
                Search : <input type="text" name="buscar" class="form-text" placeholder="Name" />
                <input type="submit" value="Search" class="btn btn-sm btn-dark" />
            </p>
        </form>
    </div>
    <div>
        <form asp-controller="Editorials" asp-action="Index">
            <h4>Search by publisher</h4>
            <p>
                Search : <input type="text" name="buscar" class="form-text" placeholder="Name" />
                <input type="submit" value="Search" class="btn btn-sm btn-dark" />
            </p>
        </form>
    </div>
    <div>
        <form asp-controller="Libroes" asp-action="Index">
            <h4>Search by book</h4>
            <p>
                Search : <input type="text" name="buscar" class="form-text" placeholder="Title" />
                <input type="submit" value="Search" class="btn btn-sm btn-dark" />
            </p>
        </form>
    </div>

</div>


