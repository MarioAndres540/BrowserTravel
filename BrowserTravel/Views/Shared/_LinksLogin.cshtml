@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-white">Hi, @User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline " asp-action="logout" asp-controller="usuarios">
                <button type="submit" class="nav-link btn btn-link text-white">Logout</button>

            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="usuarios" asp-action="Registro">Record</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="usuarios" asp-action="Login">Login</a>
        </li>
    }
</ul>
